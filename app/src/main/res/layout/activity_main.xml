<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#ffe5e5c0"
    android:background="#ffe5e5c0">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:id= "@+id/hello_id" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:id= "@+id/bug_id" android:text="@string/bug" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello_id"
        android:layout_alignParentStart="true"
        android:background="#ffe5e5c0"
        android:textColor="#ffe5e5c0" />

    <TextView android:id= "@+id/behav_id" android:text="@string/behave" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bug_id"
        android:layout_alignParentStart="true"
        android:background="#ffe5e5c0"
        android:textColor="#ffe5e5c0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bug_image_id"
        android:layout_below="@+id/behav_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/behave_image"
        android:layout_below="@+id/behav_id"
        android:layout_toEndOf="@+id/hello_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="340dp"

        />




</RelativeLayout>
